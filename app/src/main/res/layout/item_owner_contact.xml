<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/contact_item_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/googleg_disabled_color_18"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:lines="1"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/contact_item_avatar"
        app:layout_constraintTop_toTopOf="@+id/contact_item_avatar"
        tools:text="Alexey Homa" />

    <TextView
        android:id="@+id/contact_last_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/contact_item_avatar"
        app:layout_constraintTop_toBottomOf="@+id/contact_item_name"
        tools:text="Last update ..." />

</androidx.constraintlayout.widget.ConstraintLayout>