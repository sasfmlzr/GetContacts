<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="16dp">

	<TextView
		android:id="@+id/contact_item_avatar"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:background="@drawable/googleg_disabled_color_18"
		android:gravity="center"
		android:maxLength="1"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/contact_item_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:lines="1"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/contact_item_last_date"
		app:layout_constraintLeft_toRightOf="@+id/contact_item_avatar"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Alexey Homa" />

	<TextView
		android:id="@+id/contact_item_last_date"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:drawablePadding="4dp"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:lines="1"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@+id/contact_item_name"
		app:layout_constraintRight_toRightOf="@+id/contact_item_name"
		app:layout_constraintTop_toBottomOf="@+id/contact_item_name"
		tools:text="last update ..." />

</androidx.constraintlayout.widget.ConstraintLayout>